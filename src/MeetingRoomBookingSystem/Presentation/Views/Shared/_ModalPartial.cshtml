<!-- Delete Confirmation Modal -->
<div class="modal fade" id="modal-default" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document" style="margin: 50px auto 0;">
        <!-- Adjust margin for top positioning -->
        <div class="modal-content" style="background-color: white; border-radius: 10px; border: 0; box-shadow: 0 0 20px rgba(0,0,0,0.1);">
            <div class="modal-header" style="border-bottom: 1px solid #e9ecef;">
                <h5 class="modal-title" id="deleteModalLabel" style="color: #dc3545; font-size: 1.5rem; font-weight: bold;">Confirm Deletion</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="outline: none;">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center" style="padding: 20px;">
                <p style="color: #6c757d;">Are you sure you want to delete this item? This action cannot be undone.</p>
                <form id="deleteForm" action="" method="post" asp-antiforgery="true">
                    <input type="hidden" id="deleteId" name="id" value="" />
                </form>
            </div>
            <div class="modal-footer justify-content-center" style="border-top: 1px solid #e9ecef; padding: 15px;">
                <button type="button" class="btn" style="background-color: #3c8dbc; color: white;" data-dismiss="modal">Cancel</button>
                <button type="button" id="deleteButton" class="btn" style="background-color: #dc3545; color: white;">Yes, Delete!</button>
            </div>
        </div>
    </div>
</div>
