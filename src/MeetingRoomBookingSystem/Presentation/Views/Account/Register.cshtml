@model RegistrationModel
@{
    ViewData["Title"] = "Register";
}

<div class="col-md-8 col-lg-6 mx-auto">
    <form id="registerForm" asp-action="Register" asp-controller="Account"
          asp-antiforgery="true" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h2 class="text-center mb-4">Register a New Account</h2>
        <hr />

        <!-- Validation summary -->
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <!-- New Fields -->
        <div class="form-floating mb-3">
            <input asp-for="Name" class="form-control" id="Name" placeholder="User Name" required />
            <label for="Name">Full Name</label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="PhoneNumber" class="form-control" id="PhoneNumber" placeholder="Phone Number" required />
                    <label for="PhoneNumber">Phone Number</label>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="Pin" class="form-control" id="Pin" placeholder="Pin" required />
                    <label for="Pin">Pin</label>
                    <span asp-validation-for="Pin" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Department" class="form-control" id="Department" placeholder="Department" required />
            <label for="Department">Department</label>
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Designation" class="form-control" id="Designation" placeholder="Designation" required />
            <label for="Designation">Designation</label>
            <span asp-validation-for="Designation" class="text-danger"></span>
        </div>

        <!-- Existing Fields -->
        <div class="form-floating mb-3">
            <input asp-for="Email" class="form-control" id="Email" autocomplete="username" placeholder="name@example.com" required />
            <label for="Email">Email</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Password" class="form-control" id="Password" autocomplete="new-password" placeholder="Password" required />
            <label for="Password">Password</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="ConfirmPassword" class="form-control" id="ConfirmPassword" autocomplete="new-password" placeholder="Confirm Password" required />
            <label for="ConfirmPassword">Confirm Password</label>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


