@model MeetingRoomUpdateModel
@{
    ViewData["Title"] = "Update";
}


<h2>Update Meeting Room</h2>

<form asp-action="Update" method="post" enctype="multipart/form-data">
    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Capacity"></label>
        <select asp-for="Capacity" class="form-control" asp-items="ViewBag.Capacity"></select>
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Color"></label>
        <select asp-for="Color" class="form-control" asp-items="ViewBag.Color"></select>
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageFile">Upload Image</label>
        <input asp-for="ImageFile" type="file" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <div class="form-group">
            <p>Current Image:</p>
            <img src="@Model.ImagePath" alt="Meeting Room Image" class="img-thumbnail" width="200" />
        </div>
    }

    <button type="submit" class="btn btn-primary">Update</button>
</form>


