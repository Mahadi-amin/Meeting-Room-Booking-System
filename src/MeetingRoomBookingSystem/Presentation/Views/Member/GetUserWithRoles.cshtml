<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">List of Users</h3>
            </div>
            <div class="card-body">
                <table id="usersTable" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>User Name</th>
                            <th>Roles</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.FirstName</td>
                                <td>@user.LastName</td>
                                <td>@user.UserName</td>
                                <td>
                                    @if (user.Roles != null)
                                    {
                                        <span>@string.Join(", ", user.Roles)</span>
                                    }
                                    else
                                    {
                                        <span>No Roles</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="ChangeRole" asp-route-id="@user.UserName" class="btn btn-sm btn-primary" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button class="btn btn-danger btn-sm" title="Delete" data-user-id="@user.UserName" data-user-name="@user.UserName" onclick="openDeleteModal(this)">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <a asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-primary">Add New User</a>
            </div>
        </div>
    </div>
</section>


