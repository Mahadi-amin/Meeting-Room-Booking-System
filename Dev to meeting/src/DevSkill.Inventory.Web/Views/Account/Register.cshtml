@model RegistrationModel
@{
    ViewData["Title"] = "Register";
}

<div class="limiter">
	<div class="container-login100">
		<div class="wrap-login100">
			<div class="login100-pic js-tilt" data-tilt>
				<img src="~/Login_v1/images/img-01.png" alt="IMG">
			</div>

			<form class="login100-form validate-form" id="registerForm" asp-area="" asp-action="Register"
				  asp-controller="Account" asp-antiforgery="true" asp-route-returnUrl="@Model.ReturnUrl" method="post">
				<span class="login100-form-title">
					Create a new account
				</span>

				<div class="wrap-input100 validate-input" data-validate="First name is required">
					<input class="input100" type="text" asp-for="FirstName" placeholder="First Name">
					<span class="focus-input100"></span>
					<span class="symbol-input100">
						<i class="fa fa-user" aria-hidden="true"></i>
					</span>
					<span asp-validation-for="FirstName" class="text-danger"></span>
				</div>

				<div class="wrap-input100 validate-input" data-validate="Last name is required">
					<input class="input100" type="text" asp-for="LastName" placeholder="Last Name">
					<span class="focus-input100"></span>
					<span class="symbol-input100">
						<i class="fa fa-user" aria-hidden="true"></i>
					</span>
					<span asp-validation-for="LastName" class="text-danger"></span>
				</div>

				<div class="wrap-input100 validate-input" data-validate="Role name is required">
					<input class="input100" type="text" asp-for="RoleName" placeholder="Role Name">
					<span class="focus-input100"></span>
					<span class="symbol-input100">
						<i class="fa fa-id-badge" aria-hidden="true"></i>
					</span>
					<span asp-validation-for="RoleName" class="text-danger"></span>
				</div>

				<div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
					<input class="input100" type="text" asp-for="Email" placeholder="Email">
					<span class="focus-input100"></span>
					<span class="symbol-input100">
						<i class="fa fa-envelope" aria-hidden="true"></i>
					</span>
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>

				<div class="wrap-input100 validate-input" data-validate="Password is required">
					<input class="input100" type="password" asp-for="Password" placeholder="Password">
					<span class="focus-input100"></span>
					<span class="symbol-input100">
						<i class="fa fa-lock" aria-hidden="true"></i>
					</span>
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>

				<div class="wrap-input100 validate-input" data-validate="Password confirmation is required">
					<input class="input100" type="password" asp-for="ConfirmPassword" placeholder="Confirm Password">
					<span class="focus-input100"></span>
					<span class="symbol-input100">
						<i class="fa fa-lock" aria-hidden="true"></i>
					</span>
					<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
				</div>

				<div class="container-login100-form-btn">
					<button class="login100-form-btn" id="registerSubmit" type="submit">
						Register
					</button>
				</div>

				<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}



